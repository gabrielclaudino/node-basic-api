{
  "name": "node-basic-api",
  "version": "1.0.0",
  "description": "A basic node REST API implementation using Koa and MongoDB",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node ./dist/web/boot.js",
    "dev": ". ./.env && nodemon app/web/boot.js --exec babel-node",
    "build": "babel app -d dist --source-maps && babel ./package.json -d dist --copy-files",
    "watch": "babel app -d app --source-maps --watch",
    "lint": "eslint --fix ."
  },
  "author": "Gabriel Claudino <gabriel.claudino@protonmail.com>",
  "repository": "github:gabrielclaudino/node-basic-api",
  "license": "MIT",
  "dependencies": {
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "kcors": "^2.2.2",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-helmet": "^6.1.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-respond": "^2.1.0",
    "koa-router": "^10.1.1",
    "koa2-formidable": "^1.0.3",
    "mongoose": "^6.0.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@babel/runtime": "^7.16.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.3.1",
    "mongodb-memory-server": "^7.5.1",
    "nodemon": "^2.0.14"
  }
}
